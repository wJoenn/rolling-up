{
  "name": "app",
  "private": true,
  "scripts": {
    "dev": "concurrently --kill-others -n Rails:,Vite:, -c red,green, \"yarn rails:serve\" \"yarn vite:serve\"",

    "vite:serve": "cd client && vite",
    "vite:build": "cd client && vite build",
    "vite:install": "cd client && yarn",
    "lint": "cd client && yarn lint",
    "type-check": "cd client && vue-tsc",

    "c": "cd api && rails c",
    "d": "cd api && rails d",
    "g": "cd api && rails g",
    "rails:serve": "cd api && rails s",
    "bundle": "cd api && bundle",
    "db:drop": "cd api && rails db:drop",
    "db:create": "cd api && rails db:create",
    "db:migrate": "cd api && rails db:migrate",
    "db:seed": "cd api && rails db:seed",
    "rubocop": "cd api && rubocop"
  },
  "dependencies": {
    "concurrently": "^8.0.1"
  }
}
